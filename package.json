{
  "name": "node-inspector-websocket-proxy",
  "version": "v0.2.0-baseline-dist",
  "description": "Node.js Inspector WebSocket proxy with GPIO simulation support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build:pithagoras": "mkdir -p ../pithagoras/war/debugger-client && cp www/client/*.js ../pithagoras/war/debugger-client/",
    "lint": "eslint www/**/*.js server/**/*.js util/**/*.js *.js",
    "lint:fix": "eslint --fix www/**/*.js server/**/*.js util/**/*.js *.js"
  },
  "keywords": [
    "inspector",
    "debugger",
    "websocket",
    "proxy",
    "gpio"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "unzipper": "^0.12.3",
    "ws": "^8.18.3"
  },
  "server.config": {
    "httpPort": 8080,
    "proxyPort": 8888,
    "gpioPort": 8081,
    "inspectPort": 9229,
    "workspaceRoot": "/tmp/node-inspector-websocket-proxy",
    "staticDirs": [
      "~/Code/node-inspector-websocket-proxy/www",
      "~/Code/pithagoras/war"
    ],
    "logLevels": {
      "http": "debug",
      "static": "debug",
      "websocket": "debug"
    }
  },
  "devDependencies": {
    "eslint": "^8.57.1"
  }
}
